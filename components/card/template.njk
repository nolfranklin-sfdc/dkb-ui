{% from "../headline/macro.njk" import dkbHeadline with context %}
{% from "../figure/macro.njk" import dkbFigure with context %}

{#
variation:
- horizontal
- vertical
#}

{{ cardSets }}
	{% if params.set === 1 %}
		{% set heading_size = '2xl' %}
	{% else %}
		{% set heading_size = content.heading_size %}
	{% endif %}
{{ cardSets }}

<div
	class="component component--card dkb-card {{ params.card_classes }}"
>
	<a
		href="{{ params.href }}"
		class="flex flex-wrap block"
		tabindex="-1"
	>
		{{ dkbFigure(
				figure_classes=image.figure_classes+" card__image",
				src=image.src,
				params=image.image_params,
				alt=image.image_alt,
				figcaption=image.image_figcaption,
				srcset=image.image_srcset,
				sizes=image.image_sizes,
				image_classes=image.image_classes,
				width=image.image_width,
				height=image.image_height
			)
		}}
	</a>
